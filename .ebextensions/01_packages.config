container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python automatic-waffle/manage.py migrate --noinput"
    leader_only: true
  02_createsu:
    command: "source /opt/python/run/venv/bin/activate && python automatic-waffle/manage.py createsu"
    leader_only: true
  03_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python automatic-waffle/manage.py collectstatic --noinput"
  04_some_cron_job:
    command: "cat .ebextensions/cron_job.txt > /etc/cron.d/tweet_cron_job && chmod 644 /etc/cron.d/tweet_cron_job"
    leader_only: true
  04_config_py:
    command: "cat .ebextensions/cron_job.txt > /opt/python/current/app/config.txt"
    leader_only: true

packages:
  yum:
    git: []
    postgresql93-devel: []
    libjpeg-turbo-devel: []

